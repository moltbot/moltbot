{
  "name": "moltbot-mini-copy",
  "version": "0.1.0",
  "description": "Minimal Moltbot subset: CLI client, WhatsApp channel, OpenAI API, gateway server",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cli-entry": "./moltbot.mjs"
  },
  "bin": {
    "moltbot-mini": "./moltbot.mjs"
  },
  "scripts": {
    "dev": "node --import tsx src/entry.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/entry.js",
    "gateway": "node --import tsx src/entry.ts gateway run",
    "gateway:dev": "node --import tsx src/entry.ts gateway run --dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:live": "CLAWDBOT_LIVE_TEST=1 vitest run --config vitest.live.config.ts"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@mariozechner/pi-agent-core": "0.49.3",
    "@mariozechner/pi-ai": "0.49.3",
    "@mariozechner/pi-coding-agent": "0.49.3",
    "@mariozechner/pi-tui": "0.49.3",
    "@mozilla/readability": "^0.6.0",
    "@sinclair/typebox": "0.34.47",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "croner": "^9.1.0",
    "dotenv": "^17.2.3",
    "file-type": "^21.3.0",
    "hono": "4.11.4",
    "json5": "^2.2.3",
    "linkedom": "^0.18.12",
    "long": "5.3.2",
    "markdown-it": "^14.1.0",
    "osc-progress": "^0.3.0",
    "pdfjs-dist": "^5.4.530",
    "proper-lockfile": "^4.1.2",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.5",
    "tslog": "^4.10.2",
    "undici": "^7.19.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/proper-lockfile": "^4.1.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.47",
    "hono": "4.11.4"
  }
}
